---
export interface Props {
    title: string;
    company: string;
    description: string;
    date: string;
    link?: string;
}

const { title, company, description, date, link } = Astro.props;
---

<li class="experience-item">
    <div class="timeline-marker">
        <div class="timeline-dot"></div>
        <div class="timeline-glow"></div>
    </div>

    <div class="experience-card">
        <div class="experience-left">
            <h3 class="experience-title">{title}</h3>
            <span class="experience-company">{company}</span>
            <time class="experience-date">
                <svg
                    class="date-icon"
                    xmlns="http://www.w3.org/2000/svg"
                    viewBox="0 0 20 20"
                    fill="currentColor"
                >
                    <path
                        fill-rule="evenodd"
                        d="M5.75 2a.75.75 0 01.75.75V4h7V2.75a.75.75 0 011.5 0V4h.25A2.75 2.75 0 0118 6.75v8.5A2.75 2.75 0 0115.25 18H4.75A2.75 2.75 0 012 15.25v-8.5A2.75 2.75 0 014.75 4H5V2.75A.75.75 0 015.75 2z"
                        clip-rule="evenodd"></path>
                </svg>
                {date}
            </time>
            {
                link && (
                    <a
                        href={link}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="experience-link"
                    >
                        <span>Saber m√°s</span>
                        <svg
                            class="link-arrow"
                            xmlns="http://www.w3.org/2000/svg"
                            viewBox="0 0 20 20"
                            fill="currentColor"
                        >
                            <path
                                fill-rule="evenodd"
                                d="M5.22 14.78a.75.75 0 001.06 0l7.22-7.22v5.69a.75.75 0 001.5 0v-7.5a.75.75 0 00-.75-.75h-7.5a.75.75 0 000 1.5h5.69l-7.22 7.22a.75.75 0 000 1.06z"
                                clip-rule="evenodd"
                            />
                        </svg>
                    </a>
                )
            }
        </div>
        <div class="experience-right">
            <p class="experience-description">{description}</p>
        </div>
    </div>
</li>

<style>
    .experience-item {
        position: relative;
        display: grid;
        grid-template-columns: auto 1fr;
        gap: 1.5rem;
        padding-bottom: 3rem;
        margin-left: -6px;
        opacity: 0;
        animation: fadeInUp 0.6s ease forwards;
    }

    .experience-item:nth-child(1) {
        animation-delay: 0ms;
    }
    .experience-item:nth-child(2) {
        animation-delay: 150ms;
    }
    .experience-item:nth-child(3) {
        animation-delay: 300ms;
    }
    .experience-item:nth-child(4) {
        animation-delay: 450ms;
    }

    @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .experience-item:last-child {
        padding-bottom: 0;
    }

    /* Timeline Marker */
    .timeline-marker {
        position: relative;
        display: flex;
        align-items: flex-start;
        justify-content: center;
    }

    .timeline-dot {
        width: 14px;
        height: 14px;
        background: linear-gradient(135deg, #fbbf24, #f59e0b);
        border-radius: 50%;
        margin-top: 0.25rem;
        position: relative;
        z-index: 10;
        box-shadow: 0 0 0 4px rgba(251, 191, 36, 0.15);
        transition: all 0.3s ease;
    }

    .timeline-glow {
        position: absolute;
        top: 0.25rem;
        width: 14px;
        height: 14px;
        background: #fbbf24;
        border-radius: 50%;
        filter: blur(8px);
        opacity: 0.4;
        z-index: 5;
        animation: glowPulse 3s ease-in-out infinite;
    }

    @keyframes glowPulse {
        0%,
        100% {
            opacity: 0.3;
            transform: scale(1);
        }
        50% {
            opacity: 0.6;
            transform: scale(1.5);
        }
    }

    .experience-item:hover .timeline-dot {
        transform: scale(1.2);
        box-shadow:
            0 0 0 4px rgba(251, 191, 36, 0.25),
            0 0 20px rgba(251, 191, 36, 0.4);
    }

    /* Experience Card */
    .experience-card {
        display: grid;
        grid-template-columns: 1fr;
        gap: 1.25rem;
        padding: 1.5rem;
        background: linear-gradient(
            135deg,
            rgba(255, 255, 255, 0.03) 0%,
            rgba(255, 255, 255, 0.01) 100%
        );
        border: 1px solid rgba(255, 255, 255, 0.06);
        border-radius: 16px;
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        position: relative;
        overflow: hidden;
    }

    .experience-card::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 1px;
        background: linear-gradient(
            90deg,
            transparent,
            rgba(251, 191, 36, 0.3),
            transparent
        );
        opacity: 0;
        transition: opacity 0.3s ease;
    }

    .experience-card:hover {
        background: linear-gradient(
            135deg,
            rgba(255, 255, 255, 0.05) 0%,
            rgba(251, 191, 36, 0.02) 100%
        );
        border-color: rgba(251, 191, 36, 0.15);
        transform: translateX(4px);
    }

    .experience-card:hover::before {
        opacity: 1;
    }

    @media (min-width: 768px) {
        .experience-card {
            grid-template-columns: minmax(200px, 260px) 1fr;
            gap: 2.5rem;
            padding: 1.75rem 2rem;
        }
    }

    /* Left Column */
    .experience-left {
        display: flex;
        flex-direction: column;
        gap: 0.35rem;
    }

    .experience-title {
        font-size: 1.2rem;
        font-weight: 700;
        background: linear-gradient(135deg, #fbbf24 0%, #fcd34d 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        line-height: 1.4;
        margin: 0;
        letter-spacing: -0.01em;
    }

    .experience-company {
        font-size: 0.95rem;
        font-weight: 600;
        color: rgba(255, 255, 255, 0.9);
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .experience-date {
        display: inline-flex;
        align-items: center;
        gap: 0.4rem;
        font-size: 0.85rem;
        color: rgba(156, 163, 175, 0.8);
        font-weight: 500;
        margin-top: 0.25rem;
    }

    .date-icon {
        width: 0.9rem;
        height: 0.9rem;
        opacity: 0.7;
    }

    /* Right Column */
    .experience-right {
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

    .experience-description {
        font-size: 0.95rem;
        line-height: 1.75;
        color: rgba(209, 213, 219, 0.85);
        margin: 0;
        max-width: 550px;
    }

    /* Link */
    .experience-link {
        display: inline-flex;
        align-items: center;
        gap: 0.35rem;
        color: #fbbf24;
        font-size: 0.875rem;
        font-weight: 600;
        text-decoration: none;
        margin-top: 0.75rem;
        padding: 0.5rem 0.9rem;
        background: rgba(251, 191, 36, 0.1);
        border: 1px solid rgba(251, 191, 36, 0.2);
        border-radius: 8px;
        width: fit-content;
        transition: all 0.3s ease;
    }

    .experience-link:hover {
        background: rgba(251, 191, 36, 0.15);
        border-color: rgba(251, 191, 36, 0.4);
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(251, 191, 36, 0.15);
    }

    .link-arrow {
        width: 0.85rem;
        height: 0.85rem;
        transition: transform 0.3s ease;
    }

    .experience-link:hover .link-arrow {
        transform: translate(2px, -2px);
    }
</style>
